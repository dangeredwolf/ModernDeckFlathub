<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
	<id>
		com.dangeredwolf.ModernDeck
	</id>
	<name>
		ModernDeck
	</name>
	<summary>
		A more powerful Twitter experience
	</summary>
	<metadata_license>
		CC0-1.0
	</metadata_license>
	<project_license>
		MIT
	</project_license>
	<description>
		<p>
			ModernDeck is an app/extension running atop TweetDeck that brings a new, Material Design-inspired interface, as well as new customization features.
		</p>
	</description>
	<url type="homepage">
		https://moderndeck.org/
	</url>
	<launchable type="desktop-id">
		com.dangeredwolf.ModernDeck.desktop
	</launchable>
	<screenshots>
		<screenshot type="default">
			<image>
				https://github.com/dangeredwolf/ModernDeck/raw/8.0/build/en_screenshot.png
			</image>
		</screenshot>
	</screenshots>
	<content_rating type="oars-1.1">
		<content_attribute id="social-chat">
			intense
		</content_attribute>
		<content_attribute id="social-contacts">
			intense
		</content_attribute>
	</content_rating>
	<releases>
		<release version="v10.0.0-beta-1984" date="2022-05-04">
			<description>
                <p>This build contains a number of improvements</p>
                <ul>
                    <li>Implemented Advanced Mute Engine fully now</li>
                    <li>Added new Welcome system</li>
                    <li>Fixed pretty much all the issues remaining with ModernDeck Boot launcher (NFT actions, missing I18n stuff)</li>
                    <li>Fixed Twitter Dark theme not intiializing correctly upon reload</li>
                    <li>Other bugfixes and improvements</li>
                    <li>Actually usable again</li>
                </ul>
			</description>
		</release>
	</releases>
</component>
