<component type="desktop-application">
	<id>
		com.dangeredwolf.ModernDeck
	</id>
	<name>
		ModernDeck
	</name>
	<summary>
		A more powerful Twitter experience
	</summary>
	<metadata_license>
		CC0-1.0
	</metadata_license>
	<project_license>
		MIT
	</project_license>
	<description>
